<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="GUI.LoginForm">
    <center>
        <GridPane alignment="CENTER" prefHeight="400.0" prefWidth="407.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="0.0" prefWidth="212.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints maxHeight="190.0" minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox prefHeight="152.0" prefWidth="252.0" spacing="15.0" GridPane.rowIndex="1">
                <PasswordField fx:id="passField" promptText="Password"/>
                <PasswordField fx:id="secretPassField" promptText="Secret Password"/>
                <HBox styleClass="login-button-wrapper">
                    <children>
                        <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#login" text="Login"/>
                        <Button fx:id="logonBtn" mnemonicParsing="false" onAction="#showLogOnForm" text="Log on"/>
                    </children>
                </HBox>
            </VBox>
        </GridPane>
    </center>
    <stylesheets>
        <URL value="@../styles/CSS/style.css"/>
        <URL value="@../styles/CSS/customStyle.css"/>
    </stylesheets>
    <top>
        <Label styleClass="title-label" text="Login" BorderPane.alignment="CENTER"/>
    </top>
</BorderPane>
